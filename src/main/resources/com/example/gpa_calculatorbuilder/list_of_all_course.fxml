<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="650.0" prefWidth="828.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/25" fx:controller="com.example.gpa_calculatorbuilder.HelloController">

    <top>
        <VBox alignment="CENTER" spacing="6" BorderPane.alignment="CENTER">
            <children>
                <Label prefHeight="32.0" prefWidth="140.0" style="-fx-font-size:22px; -fx-font-weight:bold;" text="GPA Result" textFill="#eb0794">
               <font>
                  <Font name="Berlin Sans FB Demi Bold" size="27.0" />
               </font></Label>
                <Label fx:id="totalCreditsLabel" text="Total Credits: 0" textFill="#eb0794">
               <font>
                  <Font name="Berlin Sans FB Demi Bold" size="14.0" />
               </font></Label>
            </children>
            <padding>
                <Insets bottom="12" left="12" right="12" top="12" />
            </padding>
        </VBox>
    </top>

    <center>
        <TableView fx:id="courseTable" prefHeight="410.0" prefWidth="808.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="courseNameCol" prefWidth="180" text="Course Name" />
                <TableColumn fx:id="courseCodeCol" prefWidth="120" text="Course Code" />
                <TableColumn fx:id="creditCol" prefWidth="70" text="Credit" />
                <TableColumn fx:id="gradeCol" prefWidth="80" text="Grade" />
                <TableColumn fx:id="teacher1Col" prefWidth="160" text="Teacher 1" />
                <TableColumn fx:id="teacher2Col" prefWidth="160" text="Teacher 2" />
            </columns>
        </TableView>
    </center>

    <bottom>
        <HBox alignment="CENTER_LEFT" spacing="10">
            <padding>
                <Insets bottom="12" left="12" right="12" top="12" />
            </padding>
            <children>
                <Button fx:id="backButton"  prefWidth="100" text="Back" />
            </children>
        </HBox>
    </bottom>

    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>

</BorderPane>
